<%
   controller = params[:controller]
   category = controller.capitalize
   id = params[:id]
   action = params[:action]
   if controller == "softwares"
        category = "Software Programs"
        if !id.nil?
            item = Software.find_by_slug(id)
            identifier = item.title
        end
   elsif controller == "skills"
        if !id.nil?
            item = Skill.find_by_slug(id)
            identifier = item.title
        end
   elsif controller == "years"
        if !id.nil?
            item = Year.find_by_value(id)
            identifier = id
        end
   elsif controller == "jobs"
        if !id.nil?
            item = Job.find(id)
            identifier = item.employer
        end
   end
%>
<% if controller != "home" %><a href="/" rel="internal" title="">Home</a><% end %>
<% if action  == "index" %>
    <a><%= category %></a>
<% else %>
    <a href="/<%= controller %>/" rel="internal" title="See all <%= category %>"><%= category %></a>
<% end %>
<% if action == "show" and !id.nil? %>
    <a><%= identifier %></a>
<% else %>
    <a href="/<%= controller %>/<%= params[:id] %>" rel="internal" title=""><%= identifier %></a>
<% end %>
